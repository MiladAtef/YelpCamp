<!DOCTYPE html>
<html lang="en">
	<head>
		<% include ../partials/header %>
		<title>new Campground Page</title>
	</head>
	<body>
		<% include ../partials/navbar %>
		<div class="container">
			<div class="row">
				<h1 style="text-align: center">new Campground</h1>
				<div style="width: 30%;margin: 25px auto">
					<form action="/campgrounds" method="POST">
						<div class="form-group">
							<input
								class="form-control"
								type="text"
								name="name"
								placeholder="name"
								required
							/>
						</div>
						<div class="form-group">
							<input
								class="form-control"
								type="text"
								name="image"
								placeholder="imageUrl"
								required
							/>
						</div>
						<div class="form-group">
							<input
								class="form-control"
								type="text"
								name="description"
								placeholder="description"
								required
							/>
						</div>
						<div class="form-group">
							<button class="btn btn-lg btn-primary btn-block">submit</button>
						</div>
					</form>
					<a href="/campgrounds">go back</a>
				</div>
			</div>
		</div>
		<% include ../partials/footer %>
	</body>
</html>
